<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">

    <ImageView
            android:id="@+id/user_look"
            android:layout_width="150dp"
            android:layout_height="178dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/image_box"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageView
            android:id="@+id/user_profile"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/user_look"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/view16"
            app:layout_constraintStart_toStartOf="@+id/view16"
            app:layout_constraintTop_toTopOf="@+id/view16"
            app:layout_constraintVertical_bias="0.282"
            app:srcCompat="@drawable/default_profile" />

    <TextView
            android:id="@+id/user_name"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_below="@+id/user_look"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:text="오원석"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/view16"
            app:layout_constraintStart_toEndOf="@+id/user_profile"
            app:layout_constraintTop_toTopOf="@+id/view16" />

    <ImageView
            android:id="@+id/starimg"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/view16"
            app:layout_constraintStart_toEndOf="@+id/user_name"
            app:layout_constraintTop_toTopOf="@+id/view16"
            app:srcCompat="@drawable/heart_icon" />

    <TextView
            android:id="@+id/starnum"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="3dp"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="@+id/view16"
            app:layout_constraintStart_toEndOf="@+id/starimg"
            app:layout_constraintTop_toTopOf="@+id/view16" />

    <View
            android:id="@+id/view16"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_look" />

</androidx.constraintlayout.widget.ConstraintLayout>