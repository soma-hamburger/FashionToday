<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/calendar_app_bar"
        tools:context=".Page.CalendarActivity" android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="-39dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/date_Text"
                    android:layout_width="200dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="30dp"
                    android:text="2019년 10월 01일"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView9"
                    app:layout_constraintTop_toBottomOf="@+id/imageView12" />

            <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="50dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="35dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView12"
                    app:srcCompat="@drawable/dday_icon" />

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                    android:id="@+id/calendarview"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:mcv_selectionColor="#a9dbf0cb"
                    app:mcv_showOtherDates="all">

            </com.prolificinteractive.materialcalendarview.MaterialCalendarView>

            <View
                    android:id="@+id/view6"
                    android:layout_width="180dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/login_box"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView9"
                    app:layout_constraintTop_toBottomOf="@+id/date_Text"
                    app:layout_constraintVertical_bias="0.0" />

            <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    app:layout_constraintStart_toStartOf="@+id/view6"
                    app:layout_constraintTop_toTopOf="@+id/view6"
                    app:srcCompat="@drawable/whether_icon" />

            <TextView
                    android:id="@+id/textView25"
                    android:layout_width="45dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:text="90%"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView10"
                    app:layout_constraintTop_toTopOf="@+id/view6" />

            <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    app:layout_constraintStart_toEndOf="@+id/textView25"
                    app:layout_constraintTop_toTopOf="@+id/view6"
                    app:srcCompat="@drawable/temp_icon" />

            <TextView
                    android:id="@+id/textView26"
                    android:layout_width="45dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:text="14"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView11"
                    app:layout_constraintTop_toTopOf="@+id/view6" />

            <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="350dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="28dp"
                    android:foreground="@color/gray2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/calendarview"
                    app:srcCompat="@drawable/slash_icon" />

            <TextView
                    android:id="@+id/textView27"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="30dp"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view6" />

            <TextView
                    android:id="@+id/textView28"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="10dp"
                    android:text="일정이 없습니다."
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView27" />

            <Button
                    android:id="@+id/day_button"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/calendar_button"
                    android:text="일정등록"
                    android:textColor="@color/white1"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView28" />

            <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView28"
                    app:srcCompat="@drawable/star_icon" />

            <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:text="1"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/view7"
                    app:layout_constraintTop_toTopOf="@+id/view7" />

            <View
                    android:id="@+id/view7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView13"
                    app:layout_constraintTop_toBottomOf="@+id/textView28" />

            <Button
                    android:id="@+id/detail_button"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/calendar_button"
                    android:text="추천코디"
                    android:textColor="@color/white1"
                    app:layout_constraintEnd_toStartOf="@+id/day_button"
                    app:layout_constraintTop_toBottomOf="@+id/textView28" />

            <TextView
                    android:id="@+id/dday_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="D-333"
                    app:layout_constraintEnd_toEndOf="@+id/imageView9"
                    app:layout_constraintStart_toStartOf="@+id/imageView9"
                    app:layout_constraintTop_toTopOf="@+id/imageView9" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>