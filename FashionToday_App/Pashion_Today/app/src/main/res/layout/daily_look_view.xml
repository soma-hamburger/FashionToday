<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <View
                    android:id="@+id/view18"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view17" />

            <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/view18"
                    app:layout_constraintStart_toStartOf="@+id/view18"
                    app:layout_constraintTop_toTopOf="@+id/view18"
                    app:srcCompat="@drawable/pin_icon" />

            <TextView
                    android:id="@+id/daily_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="단정한 룩"
                    android:textColor="@color/w_black"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/view18"
                    app:layout_constraintEnd_toEndOf="@+id/view18"
                    app:layout_constraintStart_toEndOf="@+id/imageView24"
                    app:layout_constraintTop_toTopOf="@+id/view18" />

            <TextView
                    android:id="@+id/daily_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="면접을 위해 단정하게 입기 좋은 룩입니다"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view18" />

            <com.soma.pashion_today.Page.ExpandableHeightGridView
                    android:id="@+id/daily_gridview"
                    android:layout_width="350dp"
                    android:layout_height="400dp"
                    android:background="@color/gray3"
                    android:numColumns="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/daily_intro" />

            <View
                    android:id="@+id/view17"
                    android:layout_width="match_parent"
                    android:layout_height="370dp"
                    android:background="@color/gray2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <View
                    android:id="@+id/view20"
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/view17" />

            <ImageView
                    android:id="@+id/imageView25"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintBottom_toBottomOf="@+id/view20"
                    app:layout_constraintStart_toStartOf="@+id/view20"
                    app:layout_constraintTop_toTopOf="@+id/view20"
                    app:srcCompat="@drawable/dday_icon" />

            <TextView
                    android:id="@+id/daily_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019년 10월 7일"
                    android:textColor="@color/w_black"
                    android:textSize="20sp"
                    app:fontFamily="@font/noto_sans"
                    app:layout_constraintBottom_toBottomOf="@+id/view20"
                    app:layout_constraintEnd_toEndOf="@+id/view20"
                    app:layout_constraintStart_toEndOf="@+id/imageView25"
                    app:layout_constraintTop_toTopOf="@+id/view20" />

            <ImageView
                    android:id="@+id/daily_img"
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view20"
                    app:srcCompat="@mipmap/ic_launcher" />

            <View
                    android:id="@+id/view15"
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/main_popup"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/daily_img" />

            <ImageView
                    android:id="@+id/daily_profile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/view15"
                    app:layout_constraintStart_toStartOf="@+id/view15"
                    app:layout_constraintTop_toTopOf="@+id/view15"
                    app:srcCompat="@drawable/default_profile" />

            <TextView
                    android:id="@+id/daily_recommender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="추천자"
                    android:textColor="@color/w_black"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/view15"
                    app:layout_constraintStart_toEndOf="@+id/daily_profile"
                    app:layout_constraintTop_toTopOf="@+id/view15" />

            <ImageView
                    android:id="@+id/imageView26"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="35dp"
                    app:layout_constraintBottom_toBottomOf="@+id/view15"
                    app:layout_constraintEnd_toEndOf="@+id/view15"
                    app:layout_constraintTop_toTopOf="@+id/view15"
                    app:srcCompat="@drawable/grade_icon" />

            <TextView
                    android:id="@+id/daily_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="385"
                    android:textColor="@color/w_black"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/view15"
                    app:layout_constraintEnd_toEndOf="@+id/view15"
                    app:layout_constraintStart_toEndOf="@+id/imageView26"
                    app:layout_constraintTop_toTopOf="@+id/view15" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>