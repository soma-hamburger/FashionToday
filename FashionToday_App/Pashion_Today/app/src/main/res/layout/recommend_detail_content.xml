<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/recommend_detail_app_bar"
        tools:context=".Page.RecommendDetail" android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

            <View
                    android:id="@+id/view22"
                    android:layout_width="300dp"
                    android:layout_height="280dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border_back"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.508"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <View
                    android:id="@+id/view23"
                    android:layout_width="300dp"
                    android:layout_height="120dp"
                    android:background="@drawable/border_top"
                    app:layout_constraintEnd_toEndOf="@+id/view22"
                    app:layout_constraintStart_toStartOf="@+id/view22"
                    app:layout_constraintTop_toTopOf="@+id/view22" />

            <ImageView
                    android:id="@+id/rd_profile"
                    android:layout_width="65dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="@+id/view23"
                    app:layout_constraintTop_toTopOf="@+id/view22"
                    app:srcCompat="@drawable/default_profile" />

            <View
                    android:id="@+id/view25"
                    android:layout_width="65dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    app:layout_constraintStart_toStartOf="@+id/view23"
                    app:layout_constraintTop_toBottomOf="@+id/rd_profile" />

            <TextView
                    android:id="@+id/rd_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="추천자"
                    android:textColor="@color/w_black"
                    app:layout_constraintEnd_toEndOf="@+id/view25"
                    app:layout_constraintStart_toStartOf="@+id/view25"
                    app:layout_constraintTop_toTopOf="@+id/view25" />

            <ImageView
                    android:id="@+id/imageView31"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintBottom_toBottomOf="@+id/view25"
                    app:layout_constraintStart_toStartOf="@+id/view25"
                    app:layout_constraintTop_toBottomOf="@+id/rd_name"
                    app:srcCompat="@drawable/grade_icon" />

            <TextView
                    android:id="@+id/rd_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="355"
                    android:textColor="@color/w_black"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/view25"
                    app:layout_constraintStart_toEndOf="@+id/imageView31"
                    app:layout_constraintTop_toBottomOf="@+id/rd_name" />

            <TextView
                    android:id="@+id/rd_userintro"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:maxLines="3"
                    android:text="추천자소개\n추천\n하이"
                    android:textColor="@color/w_black"
                    app:layout_constraintEnd_toEndOf="@+id/view23"
                    app:layout_constraintStart_toEndOf="@+id/rd_profile"
                    app:layout_constraintTop_toTopOf="@+id/view22" />

            <Button
                    android:id="@+id/rd_button"
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/calendar_button"
                    android:drawableLeft="@drawable/closet_icon"
                    android:drawablePadding="-15dp"
                    android:paddingLeft="20dp"
                    android:text="추천자 님의 옷장"
                    android:textColor="@color/white1"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/view23"
                    app:layout_constraintStart_toEndOf="@+id/view25" />

            <ImageView
                    android:id="@+id/imageView32"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="@+id/view22"
                    app:layout_constraintStart_toStartOf="@+id/view22"
                    app:layout_constraintTop_toBottomOf="@+id/view23"
                    app:srcCompat="@drawable/dday_icon" />

            <TextView
                    android:id="@+id/rd_dday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="D-232"
                    android:textColor="@color/puple1"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView32"
                    app:layout_constraintEnd_toEndOf="@+id/imageView32"
                    app:layout_constraintStart_toStartOf="@+id/imageView32"
                    app:layout_constraintTop_toTopOf="@+id/imageView32" />

            <TextView
                    android:id="@+id/rd_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="2019년 11월 23일"
                    android:textColor="@color/w_black"
                    app:layout_constraintEnd_toEndOf="@+id/view22"
                    app:layout_constraintStart_toStartOf="@+id/view22"
                    app:layout_constraintTop_toBottomOf="@+id/imageView32" />

            <View
                    android:id="@+id/view26"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="@+id/view22"
                    app:layout_constraintStart_toStartOf="@+id/view22"
                    app:layout_constraintTop_toBottomOf="@+id/rd_date" />

            <ImageView
                    android:id="@+id/imageView33"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/view26"
                    app:layout_constraintStart_toStartOf="@+id/view26"
                    app:layout_constraintTop_toTopOf="@+id/view26"
                    app:srcCompat="@drawable/whether_icon" />

            <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="90%"
                    app:layout_constraintBottom_toBottomOf="@+id/view26"
                    app:layout_constraintStart_toEndOf="@+id/imageView33"
                    app:layout_constraintTop_toTopOf="@+id/view26" />

            <ImageView
                    android:id="@+id/imageView34"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="25dp"
                    app:layout_constraintBottom_toBottomOf="@+id/view26"
                    app:layout_constraintEnd_toEndOf="@+id/view26"
                    app:layout_constraintTop_toTopOf="@+id/view26"
                    app:srcCompat="@drawable/temp_icon" />

            <TextView
                    android:id="@+id/textView32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="20"
                    app:layout_constraintBottom_toBottomOf="@+id/view26"
                    app:layout_constraintEnd_toEndOf="@+id/view26"
                    app:layout_constraintTop_toTopOf="@+id/view26" />

            <TextView
                    android:id="@+id/rd_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="룩 타이틀"
                    android:textColor="@color/w_black"
                    app:layout_constraintEnd_toEndOf="@+id/view22"
                    app:layout_constraintStart_toStartOf="@+id/view22"
                    app:layout_constraintTop_toBottomOf="@+id/view26" />

            <TextView
                    android:id="@+id/rd_intro"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="룩 소개"
                    android:textColor="@color/w_black"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@+id/view22"
                    app:layout_constraintStart_toStartOf="@+id/view22"
                    app:layout_constraintTop_toBottomOf="@+id/rd_title" />

            <Spinner
                    android:id="@+id/rd_typespinner"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView35" />

            <Spinner
                    android:id="@+id/rd_colorspinner"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toEndOf="@+id/rd_typespinner"
                    app:layout_constraintTop_toBottomOf="@+id/imageView35" />

            <Button
                    android:id="@+id/rd_select"
                    android:layout_width="65dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/calendar_button"
                    android:text="보기"
                    android:textColor="@color/white1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView35" />

            <com.soma.Pashion_Today.Page.ExpandableHeightGridView
                    android:id="@+id/rd_gridview"
                    android:layout_width="300dp"
                    android:layout_height="350dp"
                    android:layout_marginBottom="50dp"
                    android:numColumns="2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rd_colorspinner" />

            <ImageView
                    android:id="@+id/imageView35"
                    android:layout_width="320dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view22"
                    app:srcCompat="@drawable/slash_icon" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>