<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">

    <ImageView
            android:layout_width="302dp"
            android:layout_height="293dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/dailylook_image"
            android:layout_gravity="center_horizontal" android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>
    <ImageView
            android:layout_width="89dp"
            android:layout_height="72dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:layout_alignParentStart="true" android:layout_marginStart="49dp"
            android:layout_alignParentLeft="true" android:id="@+id/profile_imageview"
            android:layout_marginLeft="49dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="179dp" android:layout_marginTop="29dp"
            android:layout_below="@+id/dailylook_image"/>
    <TextView
            android:text="추천자"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:id="@+id/recommend_usertext"
            android:layout_marginLeft="31dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_toEndOf="@+id/profile_imageview" android:layout_toRightOf="@+id/profile_imageview"
            android:layout_marginTop="60dp" android:layout_below="@+id/dailylook_image"
    />
    <TextView
            android:text="룩 설명입니다"
            android:layout_width="307dp"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="59dp" android:layout_alignParentLeft="true"
            android:id="@+id/textView15"
            android:layout_marginLeft="59dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginTop="34dp" android:layout_below="@+id/recommend_usertext"/>
</RelativeLayout>